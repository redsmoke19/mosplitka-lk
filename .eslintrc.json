{
  "extends": "standard",
  "rules": {
    "semi": [2, "always"],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "comma-dangle": ["error", {
      "arrays": "only-multiline",
      "objects": "always",
      "imports": "never",
      "exports": "never",
      "functions": "never"
  }]
  }
}
