					ul.stage-table__sub-list
						+object-stage-table-items('4.', 'Ремонтныйе штуки какие-нибудь', '2шт', '200 000', '400 000')
						+object-stage-table-items('5.', 'Ремонтныйе штуки какие-нибудь', '2шт', '200 000', '400 000')
						+object-stage-table-items('6.', 'Ремонтныйе штуки какие-нибудь', '2шт', '200 000', '400 000')
				li.stage-table__item.stage-table__item--head
					h3.stage-table__title Категория 3
