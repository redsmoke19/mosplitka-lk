mixin object-stage-table-items(num, title, quantity, price, sum)
	li.stage-table__sub-item
		.row.gx-1.gx-xl-3
			.col-12.col-xl-4.mb-16.mb-xl-0.d-xl-flex.align-items-center
				span.stage-table__text #{num} #{title}
			.col-3.col-xl-2.d-none.d-xl-flex.align-items-center
				span.stage-table__text м.п.
			.col-3.col-xl-2.d-none.d-xl-flex.align-items-center
				span.stage-table__text #{price} &#x20bd;
			.col-3.col-xl-2.d-flex.justify-content-xl-center.align-items-center
				span.stage-table__text #{quantity}
			.col-9.col-xl-2.d-flex.justify-content-end.align-items-center
				span.stage-table__text.stage-table__text--strong #{sum} &#x20bd;
		button.stage-table__change-button
			span.visually-hidden Кнопка для редактирования поля
			+icon('icon-edit-grey', 'object-stage__icon d-none d-xl-block', '16', '16')
		.row._hidden.position-relative
			.col-12
				textarea.stage-table__textarea(name="stageTableTextarea")
			.col-12
				button.stage-table__button-add Добавить


.object__stage.object-stage
	include header-estimate
	.object-stage__body.px-xl-100
		.col-12.col-xl-7.mx-xl-auto
